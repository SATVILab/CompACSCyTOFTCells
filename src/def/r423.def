Bootstrap: docker
From: rocker/verse:4.2.3

%environment
    export APPTAINER_BUILD_DATE=date

%files
    src/apptainer/ubuntu/R/add_r_libs.sh
    src/apptainer/ubuntu/R/add_radian.sh
    src/apptainer/ubuntu/install_vscode.sh

%post
    apt-get update && export DEBIAN_FRONTEND=noninteractive
    apt-get upgrade -y
    sh src/apptainer/ubuntu/R/add_r_libs.sh
    sh src/apptainer/ubuntu/R/add_radian.sh
    sh src/apptainer/ubuntu/install_vscode.sh
    apt-get autoremove -y && apt-get clean -y && rm -rf /var/lib/apt/lists/*
