{
  "name": "Modified Rocker Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
  	"ghcr.io/MiguelRodo/DevContainerFeatures/repos:1": {
      "installHuggingFace": false
    },
    "ghcr.io/MiguelRodo/DevContainerFeatures/config-r:2": {
      "debug": true,
      "debugRenv": true
    },
		"ghcr.io/rocker-org/devcontainer-features/r-rig:1": {
			"installDevTools": false,
			"installREnv": true,
			"installRadian": true,
			"version": "none",
			"pakVersion": "auto",
			"vscodeRSupport": "full",
			"pandocVersion": "auto"
		},
		"ghcr.io/devcontainers-contrib/features/vscode-cli:1": {},
		"ghcr.io/devcontainers-contrib/features/apt-get-packages:1": {
			"packages": "xvfb,vim,libatk-bridge2.0-0,libgtk-3-0,libxkbcommon0,libatspi2.0-0,ghostscript,git-lfs"
		},
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"installTinyTex": true,
			"installChromium": true
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"quarto.quarto",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"REditorSupport.r",
				"bierner.markdown-preview-github-styles",
				"eamodio.gitlens",
				"mathematic.vscode-pdf"
			]
		}
	}
}
